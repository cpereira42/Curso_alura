<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OnBoardingFragment">

    <TextView
        android:id="@+id/fragment_on_boarding_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:lineHeight="48sp"
        android:text="Receba Pix de forma simples"
        android:textColor="#2F2F33"
        android:textSize="43sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_on_boarding_subtitle"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:text="Cadastre uma chave Pix, e receba sem ter que passar todos seus dados da sua conta."
        android:textColor="#757680"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@id/fragment_on_boarding_title"
        app:layout_constraintStart_toStartOf="@+id/fragment_on_boarding_title"
        app:layout_constraintTop_toBottomOf="@id/fragment_on_boarding_title" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_on_boarding_im_key"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:src="@mipmap/ic_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_on_boarding_subtitle" />

    <TextView
        android:id="@+id/fragment_on_boarding_title1"
        android:layout_width="0dp"
        android:layout_height="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="88dp"
        android:text="Escolha o tipo de chave"
        android:textColor="#2F2F33"
        android:textSize="17sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_on_boarding_subtitle" />

    <TextView
        android:id="@+id/fragment_on_boarding_sub1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="88dp"
        android:text="Cadastre seu CPF, celular, e-mail ou use uma chave aleatória"
        android:textColor="#757680"
        android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_on_boarding_title1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_on_boarding_list"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_list"
        app:layout_constraintTop_toBottomOf="@+id/fragment_on_boarding_im_key"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/fragment_on_boarding_title2"
        android:layout_width="0dp"
        android:layout_height="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_on_boarding_sub1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="88dp"
        android:text="Cadastre até 5 chaves"
        android:textSize="17sp"
        android:textColor="#2F2F33"/>
    <TextView
        android:id="@+id/fragment_on_boarding_sub2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_on_boarding_title2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="88dp"
        android:text="A Conta pode ter até 5 chaves cadastradas ao mesmo tempo"
        android:textColor="#757680"
        android:textSize="15sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_on_boarding_list"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/ic_lock"/>

    <TextView
        android:id="@+id/fragment_on_boarding_title3"
        android:layout_width="0dp"
        android:layout_height="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_on_boarding_sub2"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="88dp"
        android:text="Vínculo apenas com uma conta"
        android:textColor="#2F2F33"
        android:textSize="17sp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/fragment_on_boarding_sub3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_on_boarding_title3"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="88dp"
        android:text="Cada chave só pode ser vinculada a uma única conta."
        android:textColor="#757680"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/fragment_on_boarding_continue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="CONTINUAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_on_boarding_sub3"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#E02B57"/>
</androidx.constraintlayout.widget.ConstraintLayout>