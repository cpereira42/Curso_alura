<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EmptyKeyFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_empty_key"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/ic_key_blue"
        android:layout_marginTop="210dp"/>

    <TextView
        android:id="@+id/activity_empty_key_title"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_empty_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Sem chaves cadastradas"
        android:textColor="#2F2F33"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="34sp"/>
    <TextView
        android:id="@+id/activity_empty_key_subtitle"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/activity_empty_key_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text="VocÃª precisa cadastrar uma chave para receber dinheiro pelo Pix"
        android:gravity="center"
        android:textSize="17sp"/>
    <Button
        android:id="@+id/fragment_new_key_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_empty_key_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="138dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="CADASTRAR NOVA CHAVE"
        android:backgroundTint="#E02B57"/>

</androidx.constraintlayout.widget.ConstraintLayout>